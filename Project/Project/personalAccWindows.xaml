<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        xmlns:CalcBinding="clr-namespace:CalcBinding;assembly=CalcBinding" x:Class="Project.personalAccWindows"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="300" Width="650">
    <Window.Resources>
        <AlternationConverter x:Key="AlternationConverter"/>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="defBack"/>
    </Window.Background>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="325"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="325" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" MinHeight="90"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="50"/>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="1"  Grid.Row="0" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" Grid.RowSpan="3"/>
        <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" Height="3"
        HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <Canvas Grid.Column="0" Grid.Row="0">
            <Button x:Name="button" Content="Теоретический справочник" Canvas.Left="10" Canvas.Top="10" Style="{StaticResource simpleBtnStyle}" Margin="0" Background="#FFDDDDDD"/>
            <Button x:Name="button1" Content="Задачи" Canvas.Left="10" Canvas.Top="54" Width="177" Style="{StaticResource ResourceKey=btnStyle}" Height="28" Margin="0"/>
        </Canvas>
        <Canvas Grid.RowSpan="3" Grid.Column="2" Background="White">
            <TextBlock><Run Text="Статистика"/></TextBlock>
        </Canvas>
        <Canvas x:Name="canvas" Grid.Row="2">
            <TextBlock x:Name="textBlock" Height="126" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" Width="300" Background="White" Opacity="0.3" TextAlignment="Right" Margin="0"/>
            <TextBox x:Name="textBox" Height="25" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="141" Width="269" FontStyle="Italic" TextAlignment="Right"/>
            <Button x:Name="button2" Content=" Ок " Canvas.Left="284" Canvas.Top="141" Width="Auto" Height="25" Style="{StaticResource ResourceKey=btnStyle}" RenderTransformOrigin="1.053,0.52"/>
        </Canvas>
    </Grid>
</Window>
