<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Project.registration"
        mc:Ignorable="d"
        Title="Регистрация нового ученика" Background="{DynamicResource defBack}" Height="223.5" Width="434.5"
        MinHeight="223.5" MinWidth="434.5">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Введите ФИО:" HorizontalAlignment="Left" Margin="43,19,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Придумайте логин:" HorizontalAlignment="Left" Margin="43,45,0,0" VerticalAlignment="Top" Grid.ColumnSpan="1"/>
        <Label x:Name="label2" Content="И пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,71,0,0" RenderTransformOrigin="0.121,-0.038"/>
        <Label x:Name="label3" Content="Выберите свой класс:" HorizontalAlignment="Left" Margin="43,97,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="5,19,-78,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207" Grid.Column="1" TextChanged="nameBox_TextChanged"/>
        <TextBox x:Name="logBox" HorizontalAlignment="Left" Height="23" Margin="5,45,-79,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207" Grid.Column="1" TextChanged="logBox_TextChanged"/>
        <TextBox x:Name="passBox1" HorizontalAlignment="Left" Height="23" Margin="5,71,-79,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207" Grid.Column="1" TextChanged="passBox1_TextChanged"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="5,97,0,0" VerticalAlignment="Top" SelectionChanged="comboBox_SelectionChanged" Grid.Column="1">
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
        </ComboBox>
        <Button x:Name="button" Grid.ColumnSpan="2" Content="Зарегистрироваться" Margin="157,127,10,0" VerticalAlignment="Top" Width="Auto" Click="button_Click"/>
        <Label x:Name="incorrectPassLabel" Content="Заполните все поля!" HorizontalAlignment="Left" Margin="157,152,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Visibility="Hidden" FontFamily="Segoe Print" />
    </Grid>
</Window>
